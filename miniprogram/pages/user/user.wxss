.screen {
    position: relative;
}
.avatar , .move-circle, .func-entry {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    overflow: hidden;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}
.avatar {
    border: 1px solid #fff;
}
.move-circle {
    background-color: #fff;
}
.func-entry {
    line-height: 160rpx;
    color: #fff;
    display: flex;
    justify-content: center;
    z-index: 1000;
    opacity: 0.8;
}
.avatar {
    z-index: 1000;
}
.history {
    left: 20%;
    top: 20%;
    animation: breath 3s linear infinite;
}
.use-record {
    top: 30%;
    left: 80%;
    animation: breath 3s linear 2s infinite;
}
.comment {
    top: 80%;
    left: 30%;
    animation: breath 4s linear 1s infinite;
}
.comment-btn {
    width: 100%;
    height: 100%;
    line-height: 160rpx;
    color: #fff;
    font-size: 12px;
    font-weight: normal;
    padding: 0;
}
.about {
    width: 140rpx;
    height: 140rpx;
    line-height: 140rpx;
    top: 65%;
    left: 80%;
    animation: breath 3s linear 1s infinite;
}
.first {
    z-index: 100;
    animation: extend 4s ease-in infinite;
}
.second {
    z-index: 10;
    animation: extend 4s ease-in 2s infinite;
}
.three {
    z-index: 1;
    animation: extend 4s ease-in 4s infinite;
}
@-webkit-keyframes extend {
	0% {
        opacity: 1;
	}

	100% {
        transform: scale(8);
        opacity: 0;
	}
}
@-webkit-keyframes breath {
    0% {
        transform: scale(1) translate(-50%, -50%);
    }
    50% {
        transform: scale(0.8) translate(-50%, -50%);
    }
    100% {
        transform: scale(1) translate(-50%, -50%);
    }
}