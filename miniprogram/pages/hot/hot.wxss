.card-box {
  width: 95%;
  margin: 20rpx auto 0;
  border-radius: 10rpx;
  padding: 30rpx 30rpx 0 30rpx;
}
.card-box .title {
  width: 100%;
}
.card-box .title-content {
  width: 80%;
}
.content {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  overflow: hidden;
  display: inline-block;
  white-space: nowrap;
}
.item {
  display: inline-block;
}

.last-card {
  margin-bottom: 50rpx;
}

.footer {
  width: 750rpx;
}

.footer-img {
  width: 56rpx;
  height: 49rpx;
}

.footer-img image {
  width: 100%;
  height: 100%;
}