/**app.wxss**/
@import 'style/iconfont.wxss';
@import 'style/main.wxss';
@import 'style/animation.wxss';

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background-color: #fff;
  border-radius: 0;
  width: 0;
  padding: 0;
  line-height: 0;
  font-weight: 0;
  padding-right: 0;
}

button::after{
  border: none;
}

page {
  width: 750rpx;
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}